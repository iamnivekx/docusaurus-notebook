{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@blockchain-notes/*": ["packages/*/src", "packages/*"],
      "@/*": ["./src"]
    }
  },
  "include": ["packages/*/src/**/*", "website/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "**/*.test.js",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
